<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:layout_weight="1"
        >
        <TableRow>
            <TextView
                android:text="Player - "
                android:id="@+id/player"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:gravity="center" />

            <TextView
                android:text="Life"
                android:id="@+id/totallife"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:padding="5dp"
                android:gravity="center" />

        </TableRow>

        <TableRow>
            <TextView
                android:text="1"
                android:id="@+id/p1"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:text="20"
                android:id="@+id/P1life"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:text="+"
                android:id="@+id/plusP1"
                android:layout_column="2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:id="@+id/minusP1"
                android:layout_column="3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:layout_weight="1"/>

            <Button
                android:text="-5"
                android:id="@+id/minus5P1"
                android:layout_column="4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:id="@+id/plus5P1"
                android:layout_column="5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="2"
                android:id="@+id/p2"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:text="20"
                android:id="@+id/P2life"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:text="+"
                android:id="@+id/plusP2"
                android:layout_column="2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:id="@+id/minusP2"
                android:layout_column="3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:layout_weight="1"/>

            <Button
                android:text="-5"
                android:id="@+id/minus5P2"
                android:layout_column="4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:id="@+id/plus5P2"
                android:layout_column="5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:onClick="calculateLife"
                android:layout_weight="1"/>


        </TableRow>

        <TableRow>
            <TextView
                android:text="3"
                android:id="@+id/p3"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:text="20"
                android:id="@+id/P3life"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:text="+"
                android:id="@+id/plusP3"
                android:layout_column="2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:id="@+id/minusP3"
                android:layout_column="3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="-5"
                android:id="@+id/minus5P3"
                android:layout_column="4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:id="@+id/plus5P3"
                android:layout_column="5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"


                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="4"
                android:id="@+id/p4"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:text="20"
                android:id="@+id/P4life"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"/>

            <Button
                android:text="+"
                android:id="@+id/plusP4"
                android:layout_column="2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="-"
                android:id="@+id/minusP4"
                android:layout_column="3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="-5"
                android:id="@+id/minus5P4"
                android:layout_column="4"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

            <Button
                android:text="+5"
                android:id="@+id/plus5P4"
                android:layout_column="5"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:onClick="calculateLife"
                android:textColor="#000000"
                android:layout_weight="1"/>

        </TableRow>

        <TextView
            android:text=""
            android:id="@+id/loser"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible"/>
    </TableLayout>

</ScrollView>